<%= link_to 'Admin Contests', admin_contests_path %>

<p id="notice"><%= notice %></p>
<p id="alert"><%= alert %></p>

<h1>Admin Members</h1>

<%= form_tag admin_member_merge_preview_path do %>
  <table>
  <thead>
    <tr>
      <th>select</th>
      <th>family name</th>
      <th>given name</th>
      <th>iac id</th>
      <th colspan='3'>action</th>
    </tr>
  </thead>
  <tbody>
  <% @members.each do |member| %>
    <tr>
      <td><%= check_box_tag "selected[#{member.id}]" %></td>
      <td>
        <a name='<%= member.id %>' />
        <%= member.family_name %>
      </td>
      <td><%= member.given_name %></td>
      <td><%= member.iac_id %></td>
      <td><%= link_to :edit, edit_admin_member_path(member) %></td>
      <td><%= link_to :show, admin_member_path(member) %></td>
      <td><%= submit_tag :merge %></td>
    </tr>
  <% end %>
  </tbody>
  </table>
<% end %>

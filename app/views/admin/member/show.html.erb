<h1><%= @member.name %></h1>

<% if !@member.chief.empty? %>
<h2>Chief Judge Flights</h2>
<% end %>
<% @member.chief.each do |flight| %>
  <p class='item'>
    <%= "#{flight.contest.year_name}, #{flight.displayName}" %>
  </p>
<% end %>


<tr>
  <td><%= failure.updated_at %></td>
  <td><%= failure.step %></td>
  <td><%= failure.contest.year_name if failure.contest %></td>
  <td><%= failure.contest_id || 'N/A' %></td>
  <td><%= link_to 'show', admin_failure_path(failure) %>
  <td><%= link_to :delete, admin_failure_path(failure), method: :delete, data: { confirm: 'Are you sure?' } %>
</tr>

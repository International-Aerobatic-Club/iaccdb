<p id="notice"><%= notice %></p>

<h1><%= link_to @pilot.name, pilot_path(@pilot) %></h1>
<h2><%= link_to (@contest) do "#{@contest.name} #{@contest.start}" end %></h2>

<% @pilot_flights.each_with_index do |pf,i| %>
  <% s = @flight_scores[i] %>
  <div class="flightScores">
  <h3><%= pf.flight.displayName %></h3>
  <table class="scores">
  <thead><tr>
  <th>F</th>
  <% (1 .. s[0].count).each do |j| %>
    <th>J<%= j.to_s %></th>
  <% end %>
  </tr></thead>
  <tbody>
  <% pi = s.count - 1 %>
  <% (0 ... pi).each do |f| #figures %>
    <tr>
    <td><%= (f+1).to_s %></td>
    <% s[f].each do |js| #judges %>
      <td><%= Score.display_score(js) %></td>
    <% end #judges %>
    </tr>
  <% end #figures %>
  <tr>
  <td>P</td>
  <% s[pi].each do |js| #judges %>
    <td><%= Score.display_score(js) %></td>
  <% end #judges %>
  </tr>
  </tbody>
  </table>
  </div>
<% end #flights %>

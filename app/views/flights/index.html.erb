<h1>Listing flights</h1>

<table>
  <tr>
    <th>Contest</th>
    <th>Category</th>
    <th>Name</th>
    <th>Sequence</th>
    <th>Chief</th>
    <th>Assist</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @flights.each do |flight| %>
  <tr>
    <td><%= flight.contest_id %></td>
    <td><%= flight.category.name %></td>
    <td><%= flight.name %></td>
    <td><%= flight.sequence %></td>
    <td><%= flight.chief_id %></td>
    <td><%= flight.assist_id %></td>
    <td><%= link_to 'Show', flight %></td>
    <td><%= link_to 'Edit', edit_flight_path(flight) %></td>
    <td><%= link_to 'Destroy', flight, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

